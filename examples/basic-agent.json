{
  "manifest_version": "0.1.0",
  "agent_id": "example.customer.support.tier1",
  "agent_name": "Customer Support Tier 1 Agent",
  "agent_version": "1.0.0",
  "owner": {
    "type": "organization",
    "identifier": "Example Support Operations Ltd."
  },
  "purpose": {
    "primary_code": "customer.support.tier1",
    "description": "Handles first-line customer support inquiries, provides guidance, and escalates unresolved issues without performing irreversible actions."
  },
  "forbidden_actions": [
    "execute_payments",
    "modify_account_permissions",
    "access_data_beyond_authorized_scope",
    "override_security_controls"
  ],
  "capabilities": [
    "respond_to_customer_queries_with_authorized_session_data",
    "retrieve_public_knowledge_base_articles",
    "create_support_tickets",
    "escalate_to_human_operator"
  ],
  "autonomy": {
    "level": 2
  },
  "risk_profile": {
    "level": "medium",
    "notes": "Limited operational access. Escalates complex or sensitive issues to human supervisors."
  },
  "data_handling": {
    "stores_personal_data": true,
    "retention": "temporary_session_only"
  },
  "stopping_authority": {
    "stoppable_by": [
      "support_manager",
      "system_administrator"
    ],
    "mechanism": "Administrative override through internal support platform control panel.",
    "stages": [
      "pre-execution",
      "mid-execution"
    ]
  },
  "audit_surface": {
    "logging": "detailed",
    "reconstructability": "full",
    "opacity_declared": false,
    "notes": "All interactions are logged with timestamp, ticket reference, and escalation history."
  },
  "contact": {
    "email": "support@example.com"
  },
  "language": {
    "primary": "en",
    "supported": [
      "en",
      "es"
    ]
  }
}
